name: TagNewVersion

on:
  pull_request_target:
    types:
      - closed
    branches:
      - 'mps/20**'

  # allow manual execution just in case
  workflow_dispatch:

jobs:
  tagBranch:
    # only trigger if it was actually merged
    if: github.event.pull_request.merged == true

    permissions:
      contents: write

    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2

      - name: Set Tag
        run: |
          echo ${{ github.ref_name }}
          export lastVersion=$(git tag | grep "^2020\.3\.[0-9]*$" | sort -V | tail -n1 | sed 's/2020.3.//g')
          echo lastVersion
          echo $((lastVersion+1))
          
